@page
@model netCore.Pages.add_salesModel
@{
}

<h1 style=" color:crimson"><b>Add new order</b></h1>
<br>

@if (Model.success_msg.Length>0)
{
   <div>
       <div class="row-cols-1">
       <div class="alert alert-success alert-dismissible">
                @Model.success_msg
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
       </div>
       </div>
   </div>
}
@if (Model.error_msg.Length > 0)
{
   <div>
        <div class="row-cols-1">
            <div class="alert alert-danger alert-dismissible">
                @Model.error_msg
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        </div>
    </div>
}
<form method="post">

<div class="row-cols-1">
        <label class="col-form-label"> Customer id  </label>
        <div>
        <input type="number" class=" form-control" name="id" value="" required></input>
        </div>
        <label class="col-form-label"> Name  </label>
        <div>
            <input type="text" class=" form-control" name="name" value="" required></input>
        </div>
        <label class="col-form-label"> Product id  </label>
        <div>
            <input type="text" class=" form-control" name="product_id" value="" placeholder="Valid code only starts with AB and PQ" maxlength="5"  required></input>
        </div>
        <label class="col-form-label"> Date </label>
        <div>
            <input type="date" class=" form-control" name="date" value="" required></input>
        </div>
        <label class="col-form-label"> Amount  </label>
        <div>
            <input type="number" class=" form-control" name="amount" value="" required></input>
        </div
         <label class="col-form-label"> Address </label>
        <div>
            <input type="text" class=" form-control" name="address" value="" required></input>
        </div>
         <label class="col-form-label"> Phone </label>
        <div>
            <input type="tel" class=" form-control" name="phone" value="" maxlength="10" required></input>
        </div>
        <br>
        <br>
       <div>
            <button type="submit" class="btn btn-success">Submit</button>
            <button type="reset" class="btn-primary">Reset</button>
            <a href ="/sales" type="reset" class="btn btn-danger">Cancel</a>
        </div>
</div>
</form>

